@model List<Models.CategoryViewModel>

<div class="categories my-4 p-4 border">
 
    <h3 class="blog-title text-dark">Danh mục</h3>
    <ul>
@foreach (var item in Model)
{
    var url = "/Tin-tuc/" + item.MetaTite + "-" + item.CategoryID;
    if (item.Children.Count() > 0)
    {
        foreach (var chil in item.Children)
        {
            url = "/Tin-tuc/" + chil.MetaTite + "-" + chil.CategoryID;
            <li class="mt-3">
                <i class="fas fa-check mr-2"></i>
                <a href="@url">@chil.Name</a>
            </li>

        }
    }
    else
    {
        url = "/Tin-tuc/" + item.MetaTite + "-" + item.CategoryID;
        <li class="mt-3">
            <i class="fas fa-check mr-2"></i>
            <a href="@url">@item.Name</a>
        </li>

    }
}

    </ul>
</div>